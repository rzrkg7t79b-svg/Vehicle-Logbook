{
  "version": 2,
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/dist",
  "framework": "vite",
  "functions": {
    "api/index.ts": {
      "runtime": "@vercel/node@3"
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/index.ts" },
    { "src": "^(?!/api).*$", "dest": "/index.html" }
  ]
}
